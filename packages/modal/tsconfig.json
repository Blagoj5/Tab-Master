{
	"compilerOptions": {
		"experimentalDecorators": true,
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es2017",
		"lib": [
			"es6",
			"dom",
			"esnext.asynciterable",
			"es2017"
		],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}