{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "build/",
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"allowJs": false,
		"checkJs": false,
    "skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}
