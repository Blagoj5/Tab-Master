{
  "manifest_version": 3,
  "name": "Tab Master",
  "version": "1.0.0",
	"background": {
    "service_worker": "backgroundScripts/index.js"
  },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["pages/bundle.js", "contentScripts/index.js"]
		}
	],
	"permissions": [
    "activeTab",
    "tabs",
    "scripting",
		"http://*/*",
		"https://*/*"
  ],
	"web_accessible_resources": [
    {
      "resources": ["pages/bundle.js", "contentScripts/index.js"],
			"matches": [
				"http://*/*",
				"https://*/*"
			]
    }
  ],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}