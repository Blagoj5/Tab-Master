{
  "name": "tab-master-ts",
  "version": "1.0.5",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/jest": "^27.4.1",
    "@types/jest-environment-puppeteer": "^5.0.0",
    "@types/node": "^17.0.21",
    "@types/puppeteer": "^5.4.5",
    "@typescript-eslint/parser": "^5.14.0",
    "auto-changelog": "^2.4.0",
    "babel-jest": "^27.5.1",
    "dotenv": "^16.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.5.1",
    "rimraf": "^3.0.2",
    "webextension-polyfill": "^0.8.0"
  },
  "scripts": {
    "type-check": "tsc --noEmit --pretty packages",
    "copy-files": "ncp assets/manifest.json build/manifest.json",
    "watch:manifest": "nodemon scripts/setup.js --verbose --watch manifest.json",
    "build:packages": "NODE_ENV=production yarn workspace @tab-master/background build & yarn workspace @tab-master/common build & yarn workspace @tab-master/modal build & yarn workspace @tab-master/popup build",
    "build:watch": "nodemon scripts/build.js --verbose --watch ./packages/common/src --watch ./packages/background/src --watch ./packages/modal/src -e ts,tsx --watch ./packages/popup/src -e ts,tsx --watch ./assets/manifest.json",
    "build": "NODE_ENV=production node scripts/build.js",
    "prezip": "rimraf tab-master-chrome.zip & rimraf tab-master-firefox.zip",
    "zip": "zip -r -FS tab-master-chrome.zip build-chrome/* & zip -r -FS tab-master-firefox.zip build-firefox/*",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "test": "jest"
  },
  "dependencies": {},
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@rollup",
      "@rollup/**"
    ]
  }
}
