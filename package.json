  "scripts": {
    "type-check": "tsc --noEmit --pretty",
    "copy-files": "ncp assets/manifest.json build/manifest.json",
    "watch:manifest": "nodemon scripts/setup.js --verbose --watch manifest.json",
    "dev": "concurrently \"yarn dev:contentScript\" \"yarn watch\"",
    "build:packages": "NODE_ENV=production yarn workspace @tab-master/background build & yarn workspace @tab-master/common build & yarn workspace @tab-master/modal build & yarn workspace @tab-master/popup build",
    "build:watch": "nodemon scripts/build.js --verbose --watch ./packages/common --watch ./packages/background --watch ./packages/modal -e ts,tsx --watch ./packages/popup -e ts,tsx --watch ./assets/manifest.json",
    "build": "NODE_ENV=production node scripts/build.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.5",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "framer-motion": "^4",
    "fuse.js": "^6.4.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-frame-component": "^5.2.1",
    "styled-components": "^5.3.3"
  },
	"workspaces": { 
		"packages": ["packages/*"],
		"nohoist": ["@rollup", "@rollup/**"]
	 }
