{
  "manifest_version": 3,
  "name": "Tab Master",
  "version": "1.0.0",
	"description": "Navigate freely. Tab Mater provides easy and intuitive way to navigate trough tabs and history",
	"icons": {  
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},
	"background": {
    "service_worker": "background/index.js"
  },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/modal.js"]
		}
	],
	"host_permissions": [
		"<all_urls>"
  ],
	"permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "history",
    "storage"
  ],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"commands": {
		"open-tab-master": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Tab Master Extension"
   }
	},
	"action": {
		"default_popup": "popup/popup.html"
	},
	"options_page": "popup/popup.html"
}